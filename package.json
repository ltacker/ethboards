{
  "name": "ethboards",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "ganache-cli": "^6.9.1",
    "react-dev-utils": "^0.4.2",
    "react-scripts": "^3.4.1",
    "truffle": "^5.1.28",
    "truffle-contract": "^3.0.0",
    "truffle-solidity-loader": "0.0.8"
  },
  "dependencies": {
    "@drizzle/react-components": "^1.5.1",
    "@drizzle/react-plugin": "^1.5.1",
    "@drizzle/store": "^1.5.1",
    "dotenv": "^8.2.0",
    "drizzle": "^1.4.0",
    "ethereumjs-util": "^5.2.0",
    "jsonfile": "^4.0.0",
    "pubsub-js": "^1.6.0",
    "react": "^16.13.1",
    "react-confirm-alert": "^2.6.1",
    "react-dom": "^16.13.1",
    "react-router": "3",
    "react-router-dom": "^5.2.0",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0",
    "sha3": "^1.2.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:ganache": "./scripts/ganache.sh",
    "build": "react-scripts build",
    "build:truffle": "truffle compile",
    "deploy": "truffle migrate",
    "test": "node scripts/test.js --env=jsdom",
    "clean": "rm -rf build",
    "clean:artifact": "rm -rf src/artifacts",
    "clean:ganache": "rm -rf .ganache",
    "import:truffle": "cp -r build/contracts src/artifacts"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
